# -*- Mode: i3wm-config -*-
# Sway config for KE2

# Set some up basic defaults

set $mod Mod4

floating_modifier $mod
set $opacity 0.8
set $term kitty
set $wallpaper "~/df/img/wallpapers/nord-theme-abstract-mountain-2.png"
set $notifications mako
set $polkit "/usr/libexec/kf5/polkit-kde-authentication-agent-1"
font pango:DejaVu Sans 12

# support for X11 apps
xwayland enable

# keep it minimal
default_border none

smart_gaps on
gaps inner 10
gaps outer 0

exec --no-startup-id xrdb ~/.Xresources

input "type:keyboard" {
  xkb_layout us
  xkb_variant mac
  xkb_options ctrl:swapcaps
}

bar {
    swaybar_command waybar
}

include /home/thomas/.config/sway/conf.d/*
